{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@miro/db": ["packages/db/src/index.ts"],
      "@miro/db/*": ["packages/db/src/*"],
      "@miro/auth": ["packages/auth/src/index.ts"],
      "@miro/auth/*": ["packages/auth/src/*"],
      "@miro/ai": ["packages/ai/src/index.ts"],
      "@miro/ai/*": ["packages/ai/src/*"],
      "@miro/ui": ["packages/ui/src/index.ts"],
      "@miro/ui/*": ["packages/ui/src/*"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*"
  ]
}
